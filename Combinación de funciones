using namespace std;

//prototipos
int fact(int f);
float combi(float n,float r);

//cuerpo principal

void main()
{
	float n1,r1,x;
	int f1,aux;
	do{
		cout<<"Ingresar el valor de n: ";
		cin>>n1;
	}while (!(n1>=0));
		do{
		cout<<"Ingresar el valor de r: ";
		cin>>r1;
		} while (!(r1>0));
	// Llamar funci√≥n
	x=combi(n1,r1);
   cout<<" la combinacion es: "<<x;
	getch();
}

//Declaraciones
int facto (int f)
{
	int aux=1;
	for (int i=2;i<=f;i++)
		aux=aux*i;   //acumulador 
	return aux; //Devolver la salida
}
float combi (float n, float r)
{
	float auxcombi;
	auxcombi=facto(n)/facto(r)*facto(n-r); //Llama a otra funcion
	return auxcombi;
}
