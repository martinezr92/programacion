#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()

{
	int a,b,c,promedio;
	
	cout<< "Ingresar a: " ;
	cin>> a;
	if (!((a>=0) && (a<=10)))
	   cout<< a <<"No esta en el rango";

	cout<< "Ingresar b: ";
	cin>> b;
	if  (!((b>=0) && (b<=10)))
	    cout<< "b no esta en el rango";

	cout<< "Ingresar c: ";
	cin>> c;
	if (!((c>=0) && (c<=10)) )
	cout<< "c no esta en el rango";

	if ((a>=0) && (a<=10) && (b>=0) && (b<=10)  && (c>=0) && (c<=10) )
		
		{promedio= (a+b+c)/3; 
		cout<< "El promedio es:"<< promedio;
	}
	getch();
}
